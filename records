def fName(a):
    return a[0]
def fAge(a):
    return a[1]

def main():
    r = {'Pedro': 22, 'Juan': 23 , 'Pepe': 24}
    
    print sorted(r.items(), key = fName)
    print sorted(r.items(), key = fName)
    print sorted(r.items(), key = lambda value:value[0])
    print sorted(r.items(), key = lambda value:value[1])

if __name__ == '__main__':
    main()
        
